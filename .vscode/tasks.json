{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "CMake: Configure",
			"type": "shell",
			"command": "cmake",
			"args": [
				"-S",
				".",
				"-B",
				"build",
				"-DCMAKE_BUILD_TYPE=Debug"
				//"-DCMAKE_BUILD_TYPE=Release"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
		"label": "CMake: Build Demo",
		"type": "shell",
		"command": "cmake",
		"args": [
			"--build",
			"build",
			"--config",
			"Release",
			"-v",
			"--target",
			"demo_simd"
		],
		"options": {
			"cwd": "${workspaceFolder}"
		},
		"group": {
			"kind": "build",
			"isDefault": true
		},
		"problemMatcher": "$gcc",
		"dependsOn": "CMake: Configure"
		},
	]
}